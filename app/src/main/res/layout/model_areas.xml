<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_card"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/location_image"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:scaleType="center" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="4dp"
                    android:text="Near Metropolis Mall"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/location_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/location_distance"
                    android:text="500m away"
                    android:layout_centerHorizontal="true"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/location_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Free"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/location_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="476 West Mahamayapur Road,Garia Gardens, Kolkata, West Bengal, 700084"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="4dp" />

                <TextView
                    android:id="@+id/location_slots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Available: 4/32"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />



            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>